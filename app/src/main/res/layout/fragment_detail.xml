<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="populairmovies.synleaf.com.populairmoviesapp.activity.DetailActivity">

    <TextView
        android:id="@+id/detail_origininal_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:textSize="24dp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/detail_release_date_layout"
        android:layout_below="@id/detail_origininal_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/detail_release_date_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/label_release_date"/>
        <TextView
            android:id="@+id/detail_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="140dp"
        android:layout_height="210dp"
        android:layout_below="@id/detail_release_date_layout"
        android:contentDescription="@string/poster_content_description" />
    <TextView
        android:id="@+id/detail_plot_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_release_date_layout"
        android:layout_toEndOf="@id/detail_image"
        android:layout_toRightOf="@id/detail_image"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="@string/label_plot" />
    <TextView
        android:id="@+id/detail_plot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_plot_label"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/detail_star_1"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:contentDescription="@string/star_content_description"
            android:src="@drawable/ic_star_off" />
        <ImageView
            android:id="@+id/detail_star_2"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:contentDescription="@string/star_content_description"
            android:src="@drawable/ic_star_off" />
        <ImageView
            android:id="@+id/detail_star_3"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:contentDescription="@string/star_content_description"
            android:src="@drawable/ic_star_off" />
        <ImageView
            android:id="@+id/detail_star_4"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:contentDescription="@string/star_content_description"
            android:src="@drawable/ic_star_off" />
        <ImageView
            android:id="@+id/detail_star_5"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:contentDescription="@string/star_content_description"
            android:src="@drawable/ic_star_off" />
        <ImageView
            android:id="@+id/detail_star_6"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:contentDescription="@string/star_content_description"
            android:src="@drawable/ic_star_off" />
        <ImageView
            android:id="@+id/detail_star_7"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:contentDescription="@string/star_content_description"
            android:src="@drawable/ic_star_off" />
        <ImageView
            android:id="@+id/detail_star_8"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:contentDescription="@string/star_content_description"
            android:src="@drawable/ic_star_off" />
        <ImageView
            android:id="@+id/detail_star_9"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:contentDescription="@string/star_content_description"
            android:src="@drawable/ic_star_off" />
        <ImageView
            android:id="@+id/detail_star_10"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:contentDescription="@string/star_content_description"
            android:src="@drawable/ic_star_off" />
        <TextView
            android:id="@+id/detail_user_rating"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="7.7"
            android:textSize="15dp" />
        <TextView
            android:id="@+id/detail_user_rating_label"
            android:layout_width="wrap_content"
            android:layout_height="23dp"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textSize="15dp"
            android:text="@string/label_user_rating"/>
    </LinearLayout>
</RelativeLayout>